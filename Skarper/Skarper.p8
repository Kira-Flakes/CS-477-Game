function init_game()
  player={
    sp=16,
    x=370,
    y=85,
    w=16,
    h=16,
    flp=false,
    dx=0,
    dy=0,
    max_dx=2,
    max_dy=3,
    acc=0.5,
    dash_time=0,
    dash_target=10,
    dash_acc=2,
    boost=4,
    anim=0,
    running=false,
    jumping=false,
    falling=false,
    sliding=false,
    landed=false,
    dashing=false
  }
  
  gravity=0.3
  friction=0.85
  
  --simple camera
  cam_x=0
  
  --map limits
  map_start=0
  map_end=384
  
  --set state
  _update = update_game
  _draw = draw_game
end --end init_game
